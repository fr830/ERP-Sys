@model MrAng_Invoice.Models.Quotation_Details

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 1;
}

<h2>Edit @Model.quotation_no</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input class="form-control" id="created_by" name="created_by" type="hidden" value="@Session["name"]" />
    <input class="form-control" id="quotation_id" name="quotation_id" type="hidden" value="@Model.quotation_id" />
    <div class=" row">
        <div class="col-md-1">
            Customer Name:
        </div>
        <div class="col-md-3">
            <div class=" input-group">
                <input class="" id="company_name" name="company_name" type="text" onclick="customerSearch()" readonly value="@Model.company_name" required />
            </div>
        </div>

        <div class="col-md-1">
            Quotation No:
        </div>
        <div class="col-md-3">
            <input class="" id="quotation_no" name="quotation_no" type="text" readonly value="@Model.quotation_no" />
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class=" row">
        <div class="col-md-1">
            Address:
        </div>
        <div class="col-md-3">
            <textarea id="company_address" name="company_address" rows="3" cols="22" class="" required readonly>@Model.company_address</textarea>
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-3">
                    Date:
                </div>
                <div class="col-md-9">
                    <input class="" id="created_date" name="created_date" type="text"  value="@Model.created_date" />
                </div>
            </div>
            <div class="row" style="margin-top:20px">
                <div class="col-md-3">
                    Payment Term:
                </div>
                <div class="col-md-9">
                    <input class="" id="payment_term" name="payment_term" type="text" required value="@Model.payment_term" />
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-1">
            Attention To:
        </div>
        <div class="col-md-3">
            <input class="" id="attn_to" name="attn_to" type="text" value="@Model.attn_to" required />
        </div>
    </div>
    <div class=" row" style="margin-top:20px">
        <div class="col-md-1">
            Status:
        </div>
        <div class="col-md-3">
            <select id="status" name="status" value="@Model.status" class="">
                <option value="Draft">Draft</option>
                <option value="PO Issued">PO Issued</option>
                <option value="Quotation Issued">Quotation Issued</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Pending">Pending</option>
                <option value="Approve">Approve</option>
                <option value="Reject">Reject</option>
            </select>
        </div>

        <div class="col-md-1">
            Remarks:
        </div>
        <div class="col-md-3">
            <textarea id="remarks" name="remarks" cols="30" rows="5" maxlength="500">@Model.remarks</textarea>
        </div>
        <div class="col-md-3"></div>
        </div>

        <!--Underline-->
        <hr style="border-top: 2px solid #ccc;">
        <div class="row">
            <div class="col-md-1">
                <label>Item No:</label>
            </div>
            <div class="col-md-3">
                <label>Description:</label>
            </div>
            <div class="col-md-1">
                <label>Qty:</label>
            </div>
            <div class="col-md-2">
                <label>Unit Price:</label>
            </div>
            <div class="col-md-1">
                <label>Tax Code:</label>
            </div>
            @if (LoginFunctionView.getUserTypeByUsername(Session["username"].ToString()) == "Admin")
            {
                <div class="col-md-2">
                    <label>Item Cost:</label>
                </div>
                <div class="col-md-2">
                    <label>Item Supplier:</label>
                </div>
            }
            else
            {
                <div class="col-md-4">  </div>
            }
        </div>
        <div id="item_wrapper">
            @for (int i = 0; i < ViewBag.result.Count; i++)
            {
                <input type="hidden" id="quotation_elab_id" name="quotation_elab_id" value="@ViewBag.result[i].quotation_id" />


                <div class="row">
                    <div class="col-md-1">
                    <input type="text" maxlength="5" class="form-control" id="item_no" name="item_no" value="@ViewBag.result[i].item_no" />
                    </div>
                    <div class="col-md-3">
                        <input id="item_description" name="item_description" type="text" class="form-control" style="max-width:400px" value="@ViewBag.result[i].item_description" required />
                        <textarea id="item_elaboration" name="item_elaboration" rows="10" cols="40" class="form-control" style="margin-top:5px;max-width:400px" maxlength="5000" required>@ViewBag.result[i].item_elaboration</textarea>
                    </div>
                    <div class="col-md-1">
                        <input id="item_qty" name="item_qty" type="number" class="form-control" value="@ViewBag.result[i].item_qty" required />
                    </div>
                    <div class="col-md-2">
                        <input id="item_price" name="item_price" type="number" step=".01" class="form-control" value="@ViewBag.result[i].item_price" required />
                    </div>
                    <div class="col-md-1">
                        <input type="text" maxlength="5" class="form-control" id="tax_code" name="tax_code" value="@ViewBag.result[i].tax_code" />
                    </div>
                    @if (LoginFunctionView.getUserTypeByUsername(Session["username"].ToString()) == "Admin")
                    {
                        if (ViewBag.result[i].item_cost != null && ViewBag.result[i].item_supplier != null)
                        {
                        <div class="col-md-2">
                            <input id="item_cost" name="item_cost" type="number" step=".01" class="form-control" value="@ViewBag.result[i].item_cost" required />
                        </div>
                        <div class="col-md-2">
                            <input type="text" maxlength="100" class="form-control" id="item_supplier" name="item_supplier" value="@ViewBag.result[i].item_supplier" />
                        </div>
                            }
                        }
                        else
                        {
                        <div class="col-md-4">  </div>

                    }
                    <a href="#" style="float:right" class="remove_field">Remove</a>
                </div>

                <br>

                counter = counter++;
            }
            <input type="hidden" id="counter" name="counter" value="@counter" />
        </div>
        <div class="row" style="margin-top:20px">
            <div class="btn-group">
                @if (LoginFunctionView.getUserTypeByUsername(Session["username"].ToString()) == "Admin")
                {
                    <button class="btn btn-primary" id="addItem_admin">Add Manual Item</button>
                }
                else
                {
                    <button class="btn btn-primary" id="addItem_user">Add Manual Item</button>
                }
                <button type ="button" class="btn btn-default" onclick="taskListSearch()" style="margin-left:10px">Add Task List Item</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" name="Command" id="Command" value="Submit" class="btn btn-default" />
            </div>
        </div>
        }


        <div class="row" style="margin-top:20px">
            @Html.ActionLink("Back to List", "Index")
        </div>
        <script src="//code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>
        <script>
            var item_wrapper = document.getElementById("item_wrapper");
            var addItem_user = document.getElementById("addItem_user");
            var addItem_admin = document.getElementById("addItem_admin");
            $(document).ready(function () {
                $(addItem_admin).click(function (e) { //on add input button click
                    e.preventDefault();
                    $(item_wrapper).append('<div class="row"><br><div class="col-md-1"><input type="text" maxlength="5"  class="form-control" id="item_no" name="item_no"/></div><div class="col-md-3"><input id="item_description" name="item_description" type="text" class="form-control" style="max-width:400px" /><textarea id="item_elaboration" name="item_elaboration" rows="10" cols="40" class="form-control" style="margin-top:5px;max-width:400px" maxlength="5000" ></textarea></div><div class="col-md-1"> <input id="item_qty" name="item_qty" type="number" class="form-control" /></div><div class="col-md-2"><input id="item_price" name="item_price" type="number" step=".01" class="form-control" /></div><div class="col-md-1"><input type="text" maxlength="5"  id="tax_code" name="tax_code" class="form-control"></div><div class="col-md-2"><input type="number" maxlength="5" id="item_cost" name="item_cost"  step=".01" class="form-control"></div><div class="col-md-2" style=""><input type="text" maxlength="100" id="item_supplier" name="item_supplier" class="form-control"></div><a href="#" style="float:right" class="remove_field">Remove</a></div>');
                    // div.appendChild(node);
                    //item_wrapper.appendChild(item_wrapper.cloneNode(true));
                });

                $(addItem_user).click(function (e) { //on add input button click
                    e.preventDefault();
                    $(item_wrapper).append('<div class="row"><br><div class="col-md-1"><input type="text" maxlength="5"  class="form-control" id="item_no" name="item_no"/></div><div class="col-md-4"><input id="item_description" name="item_description" type="text" class="form-control" style="max-width:400px" /><textarea id="item_elaboration" name="item_elaboration" rows="10" cols="40" class="form-control" style="margin-top:5px;max-width:400px" maxlength="5000" ></textarea></div><div class="col-md-1"> <input id="item_qty" name="item_qty" type="number" class="form-control" /></div><div class="col-md-2"><input id="item_price" name="item_price" type="number" step=".01" class="form-control" /></div><div class="col-md-1"><input type="text" maxlength="5"  id="tax_code" name="tax_code" class="form-control"></div>><a href="#" class="remove_field">Remove</a><div class="col-md-4"></div></div>');
                    // div.appendChild(node);
                    //item_wrapper.appendChild(item_wrapper.cloneNode(true));
                });

                $(item_wrapper).on("click", ".remove_field", function (e) { //user click on remove text
                    e.preventDefault(); $(this).parent('div').remove();
                })
            })


            function customerSearch() {
                var popup = window.open('/Quotation_Details/CustomerSearch_PopUp', '_blank', 'toolbar=0,location=0,menubar=0,scrollbars=1,resizable=1');
                popup.focus();
            }
            function taskListSearch() {
        
                var popup = window.open('/Quotation_Details/TaskListSearch_PopUp', '_blank', 'toolbar=0,location=0,menubar=0,scrollbars=1,resizable=1,scrollbars=1,resizable=1');
                popup.focus();
            }

        </script>
